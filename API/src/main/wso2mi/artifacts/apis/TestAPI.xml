<api xmlns="http://ws.apache.org/ns/synapse" name="TestAPI" context="/testapi">
    <resource methods="POST">
        <inSequence>
            <property name="messageType" value="application/json" scope="axis2"/>
            <property name="NO_ENTITY_BODY" scope="axis2" action="remove"/>

            <property name="init" scope="default" type="STRING" value="false"/>

            <property name="accum" scope="default" type="STRING" expression="json-eval($)"/>

            <property name="response_Json" scope="default" type="STRING" expression="json-eval($)" />
            

            <payloadFactory media-type="json" template-type="freemarker">
                    <format><![CDATA[
                        {
                            "accum": [
                                <#list ctx.response_Json as item>${item}<#if item_has_next>,</#if></#list>
                        </#list>
                            ]
                        }]]></format>
                    <args/>
            </payloadFactory>
            <respond/>
        </inSequence>
    </resource>
</api>
