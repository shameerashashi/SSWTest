<api xmlns="http://ws.apache.org/ns/synapse" name="TestAPI" context="/testapi">
    <resource methods="POST">
        <inSequence>
            <!-- Ensure JSON message format -->
            <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
            <property name="Content-Type" scope="transport" type="STRING" value="application/json"/>
            <payloadFactory media-type="json" template-type="freemarker">
                <format><![CDATA[
                [
                <#assign payload = payload?replace("\n", "")>
                <#list payload as record>
                        {
                        "genericRecord": {
                                      "genericRecordId": {
                                          "srcCode": "${record.genericRecord.genericRecordId.srcCode}",
                                          "memIdnum": "${record.genericRecord.genericRecordId.memIdnum}"
                                      }
                                  },
                                  "score": ${record.score}
                        }
                        <#sep>,</#sep>
                        </#list>
                ]
                ]]></format>
                <args/>
            </payloadFactory>
            <respond/>
        </inSequence>
    </resource>
</api>
